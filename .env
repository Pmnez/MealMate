# ==============================
# MealMate Bot Environment File
# ==============================

# Bot App Registration (from Azure AD / Teams app registration)
MicrosoftAppId=YOUR_BOT_APP_ID
MicrosoftAppPassword=YOUR_BOT_APP_PASSWORD

# Endpoint port (matches index.js)
PORT=3978

# (Optional) If hosting on Azure App Service, this is provided automatically
WEBSITE_NODE_DEFAULT_VERSION=18.x

# (Optional) If you connect to SharePoint or other APIs
# SharePoint tenant details
SP_TENANT_ID=YOUR_TENANT_ID
SP_CLIENT_ID=YOUR_SHAREPOINT_APP_ID
SP_CLIENT_SECRET=YOUR_SHAREPOINT_APP_SECRET
SP_SITE_URL=https://YOURTENANT.sharepoint.com/sites/MealMate

# Environment info
NODE_ENV=development
